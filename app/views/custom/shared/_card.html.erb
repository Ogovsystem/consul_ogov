<div id="<%= dom_id(card) %>"
     class="small-12 medium-<%= card.columns %> column margin-bottom end">
  <%= link_to card.link_url do %>
    <figure>
      <div class="gradient"></div>
      <% if card.image.present? %>
        <%= image_tag(card.image_url(:large), alt: card.image.title, width: "70%")  %>
      <% end %>
    </figure>
    <figcaption>
    <% if card.label.present? %>
      <span><%= card.label %></span>
    <% end %>
    <br>
    <h3><%= card.title %></h3>
  </figcaption>
    <p class="description"><%= card.description %></p>
    <p><%= card.link_text %></p>
  <% end %>
</div>
